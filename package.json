{
  "name": "@tser-framework/main",
  "version": "2.0.44",
  "description": "TypeScript Electron React framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "dev": "tsc -b -w",
