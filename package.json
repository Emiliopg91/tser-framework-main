    "release": "npm version patch && pnpm run build && npm publish && git push --tags"
  },
  "author": "Emiliopg91",
  "license": "LGPL-2.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Emiliopg91/tser-framework.git"
  },
  "bugs": {
    "url": "https://github.com/Emiliopg91/tser-framework/issues"
  },
  "homepage": "https://github.com/Emiliopg91/tser-framework#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@tser-framework/commons": "2.0.11",
    "async-mutex": "^0.5.0",
    "electron": "^28.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.4",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.3.1"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
